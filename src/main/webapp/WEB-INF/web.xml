<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <listener>
        <listener-class>com.study.store.web.listener.InitListener</listener-class>
    </listener>

    <filter>
        <filter-name>SecurityFilter</filter-name>
        <filter-class>com.study.store.web.filter.SecurityFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>SecurityFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>TemplateFilter</filter-name>
        <filter-class>com.study.store.web.filter.TemplateFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>TemplateFilter</filter-name>
        <url-pattern>/</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>TemplateFilter</filter-name>
        <url-pattern>/search</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.study.store.web.servlet.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.study.store.web.servlet.LogoutServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ProductAddServlet</servlet-name>
        <servlet-class>com.study.store.web.servlet.ProductAddServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ProductAddServlet</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ProductEditServlet</servlet-name>
        <servlet-class>com.study.store.web.servlet.ProductEditServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ProductEditServlet</servlet-name>
        <url-pattern>/edit/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ProductDeleteServlet</servlet-name>
        <servlet-class>com.study.store.web.servlet.ProductDeleteServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ProductDeleteServlet</servlet-name>
        <url-pattern>/delete/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>BasketServlet</servlet-name>
        <servlet-class>com.study.store.web.servlet.BasketServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>BasketServlet</servlet-name>
        <url-pattern>/basket/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ProductSearchServlet</servlet-name>
        <servlet-class>com.study.store.web.servlet.ProductSearchServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ProductSearchServlet</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ProductListServlet</servlet-name>
        <servlet-class>com.study.store.web.servlet.ProductListServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ProductListServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>60</session-timeout>
    </session-config>
</web-app>